---
import ServiceCard from "@/components/common/service-card.astro"
import { getWhatsAppLink, whatsappMessages } from "@/utils/whatsapp"
---

<section id="planos" class="py-24 bg-black border-t border-white/5">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16">
            <h2 class="text-3xl lg:text-4xl font-bold mb-4">
                Opções de Resgate
            </h2>
            <p class="text-gray-400">
                Soluções baseadas na gravidade do problema técnico
            </p>
        </div>

        <div class="grid lg:grid-cols-3 gap-8 max-w-5xl mx-auto items-start">
            <ServiceCard
                title="Resgate Básico"
                subtitle="Correções visuais"
                price="R$ 400"
                priceLabel="/ único"
                features={[
                    "Bugs de layout (CSS)",
                    "Ajustes de texto/foto",
                    "Otimização básica de imagens"
                ]}
                buttonText="Quero o Básico"
                buttonHref={getWhatsAppLink(whatsappMessages.resgate.plans.basico)}
            />

            <ServiceCard
                title="Resgate Completo"
                subtitle="Performance & SEO"
                price="R$ 900"
                priceLabel="A partir de"
                features={[
                    "Diagnóstico Core Web Vitals",
                    "Configuração de Cache/CDN",
                    "SEO Técnico e Sitemap",
                    "Limpeza de banco de dados",
                    "Correções de segurança básicas"
                ]}
                buttonText="Quero o Completo"
                buttonHref={getWhatsAppLink(whatsappMessages.resgate.plans.completo)}
                featured={true}
                badge="Recomendado"
                checkColor="red-500"
                borderColor="red-500"
                textColor="red-200"
                scale={true}
            />

            <ServiceCard
                title="Resgate Premium"
                subtitle="Migração completa"
                price="Sob consulta"
                features={[
                    "Stack moderna (Astro, Next, etc)",
                    "Redesign UI/UX",
                    "Migração de conteúdo",
                    "Otimização profunda",
                    "Configuração de CI/CD",
                    "Treinamento"
                ]}
                buttonText="Quero o Premium"
                buttonHref={getWhatsAppLink(whatsappMessages.resgate.plans.premium)}
            />
        </div>
    </div>
</section>
