---
import HeroSection from "@/components/common/hero-section.astro"
import { getWhatsAppLink, whatsappMessages } from "@/utils/whatsapp"
import RescueSimulator from "@/components/resgate/rescue-simulator"
---

<HeroSection
    badge={{
        text: "Performance e Estabilidade",
        color: "red"
    }}
    title="Seu site existe, mas está lento, travado ou"
    titleHighlight={{
        text: "\"não vende\"",
        color: "red"
    }}
    subtitle="O Resgate de Site é uma intervenção técnica para destravar a performance do seu negócio. Consertamos bugs, otimizamos velocidade e melhoramos a conversão."
    primaryButton={{
        text: "Pedir diagnóstico rápido",
        href: getWhatsAppLink(whatsappMessages.resgate.hero),
        color: "bg-red-600! hover:bg-red-500!"
    }}
    secondaryButton={{
        text: "Ver os planos",
        href: "#planos"
    }}
    checkText="Auditoria completa incluída. Diagnóstico em 24h"
    checkColor="red-500"
    bgColor="bg-red-900/20"
    topBadge={{
        icon: "lucide:activity",
        label: "Performance",
        value: "35 → 95",
        color: "red"
    }}
    bottomIcon={{
        name: "lucide:wrench",
        bgColor: "bg-red-600"
    }}
    stats={[
        { icon: "lucide:zap", text: "Velocidade" },
        { icon: "lucide:shield-check", text: "Segurança" },
        { icon: "lucide:trending-up", text: "Conversão" }
    ]}
>
    <RescueSimulator slot="simulator" client:load>
        <div slot="fallback" class="w-full h-full bg-zinc-900 border border-white/5 rounded-xl flex flex-col items-center justify-center p-6">
            <div class="w-full flex items-center justify-between mb-6">
                <div class="w-8 h-8 bg-red-800 rounded animate-pulse"></div>
                <div class="w-16 h-6 bg-zinc-800 rounded animate-pulse"></div>
            </div>
            <div class="w-full space-y-3">
                <div class="flex items-center gap-2">
                    <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                    <div class="flex-1 h-3 bg-red-900/30 rounded"></div>
                </div>
                <div class="flex items-center gap-2">
                    <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                    <div class="flex-1 h-3 bg-yellow-900/30 rounded"></div>
                </div>
                <div class="flex items-center gap-2">
                    <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                    <div class="flex-1 h-3 bg-green-900/30 rounded"></div>
                </div>
            </div>
        </div>
    </RescueSimulator>
</HeroSection>
