---
import HeroSection from "@/components/common/hero-section.astro"
import { getWhatsAppLink, whatsappMessages } from "@/utils/whatsapp"
import MockupRotator from "@/components/landing/mockup-rotator"
---

<HeroSection
    title="Uma landing page feita para gerar mensagens no seu <span class='text-primary'>WhatsApp</span>"
    subtitle="Entrega em 5 a 7 dias úteis, com escopo fechado, CTA claro e integração com WhatsApp — sem enrolação e sem revisões infinitas"
    primaryButton={{
        text: "Pedir diagnóstico rápido",
        href: getWhatsAppLink(whatsappMessages.landingPage.hero)
    }}
    secondaryButton={{
        text: "Ver como funciona",
        href: "#como-funciona"
    }}
    checkText="Processo simples. Uma rodada de revisão. Entrega objetiva"
    bgColor="bg-slate-900/50"
    topBadge={{
        icon: "lucide:phone",
        label: "Conversão",
        value: "+15% Leads",
        color: "primary"
    }}
    bottomIcon={{
        name: "lucide:phone",
        bgColor: "bg-[#25D366]"
    }}
    stats={[
        { icon: "simple-icons:google", text: "Google Ads" },
        { icon: "simple-icons:instagram", text: "Instagram Ads" },
        { icon: "simple-icons:facebook", text: "Facebook Ads" }
    ]}
>
    <MockupRotator slot="simulator" client:load cycleInterval={3500}>
        <div slot="fallback" class="w-full h-full bg-zinc-900 border border-white/5 rounded-xl flex flex-col items-center justify-center p-6">
            <div class="w-full flex justify-between mb-6">
                <div class="w-8 h-8 bg-zinc-800 rounded-full animate-pulse"></div>
                <div class="w-20 h-8 bg-zinc-800 rounded animate-pulse"></div>
            </div>
            <div class="w-3/4 h-8 bg-zinc-800 rounded mb-3 animate-pulse"></div>
            <div class="w-1/2 h-4 bg-zinc-800 rounded mb-8 animate-pulse"></div>
            <div class="grid grid-cols-3 gap-3 w-full opacity-50">
                <div class="aspect-square bg-zinc-800 rounded-lg animate-pulse"></div>
                <div class="aspect-square bg-zinc-800 rounded-lg animate-pulse"></div>
                <div class="aspect-square bg-zinc-800 rounded-lg animate-pulse"></div>
            </div>
        </div>
    </MockupRotator>
</HeroSection>
