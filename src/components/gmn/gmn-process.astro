<section class="py-24 bg-surface text-center">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl lg:text-4xl font-bold mb-16">Como funciona</h2>
        <div
            class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-5xl mx-auto relative z-10"
        >
            {
                [
                    {
                        step: "1",
                        title: "Diagnóstico",
                        desc: "WhatsApp ou call",
                    },
                    { step: "2", title: "Checklist", desc: "Dados e acessos" },
                    {
                        step: "3",
                        title: "Execução",
                        desc: "Otimização + Avaliações",
                    },
                    { step: "4", title: "Entrega", desc: "Orientação final" },
                ].map((item) => (
                    <div class="flex flex-col items-center group">
                        <div class="w-16 h-16 rounded-2xl bg-black border border-white/10 group-hover:border-blue-500 group-hover:bg-blue-500/10 group-hover:text-blue-500 transition-all duration-300 flex items-center justify-center text-xl font-bold text-white mb-4 shadow-lg">
                            {item.step}
                        </div>
                        <h3 class="font-bold text-white mb-1">{item.title}</h3>
                        <p class="text-xs text-gray-400">{item.desc}</p>
                    </div>
                ))
            }
        </div>
    </div>
</section>
