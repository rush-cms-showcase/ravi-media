---
import HeroSection from "@/components/common/hero-section.astro"
import { getWhatsAppLink, whatsappMessages } from "@/utils/whatsapp"
import GmnSearchSimulator from "@/components/gmn/gmn-search-simulator"
---

<HeroSection
    badge={{
        text: "Visibilidade Local",
        color: "blue"
    }}
    title="Apareça melhor no Google e receba mais"
    titleHighlight={{
        text: "contatos locais",
        color: "blue"
    }}
    subtitle="Otimização completa do seu perfil no Google, com SEO local e estratégia de avaliações — feito para negócios que dependem de busca local e WhatsApp para vender"
    primaryButton={{
        text: "Quero um diagnóstico rápido",
        href: getWhatsAppLink(whatsappMessages.gmn.hero),
        color: "bg-blue-500! hover:bg-blue-400!"
    }}
    secondaryButton={{
        text: "Ver o que está incluso",
        href: "#o-que-voce-recebe"
    }}
    checkText="Entrega em 3 a 5 dias úteis. Processo objetivo"
    checkColor="blue-500"
    bgColor="bg-blue-900/20"
    simulator={GmnSearchSimulator}
    simulatorFallback={`
        <div class="w-full h-full bg-white flex flex-col items-center justify-center p-6">
            <div class="w-32 h-10 mb-8 bg-gray-100 rounded-lg animate-pulse"></div>
            <div class="w-full max-w-sm h-12 bg-white border border-gray-200 rounded-full mb-6"></div>
            <div class="flex gap-3">
                <div class="w-20 h-8 bg-gray-100 rounded-full animate-pulse"></div>
                <div class="w-20 h-8 bg-blue-100 rounded-full animate-pulse"></div>
            </div>
        </div>
    `}
    topBadge={{
        icon: "lucide:trending-up",
        label: "Ranking",
        value: "Top #3 → #1",
        color: "blue"
    }}
    bottomIcon={{
        name: "simple-icons:google",
        bgColor: "bg-blue-500"
    }}
    stats={[
        { icon: "lucide:map-pin", text: "Busca Local" },
        { icon: "lucide:star", text: "Avaliações" },
        { icon: "lucide:phone", text: "Ligações Diretas" }
    ]}
/>
