---
import Button from "@/components/ui/button.astro"
import { Icon } from "astro-icon/components"
import { getWhatsAppLink } from "@/utils/whatsapp"
import GmnSearchSimulator from "@/components/gmn/gmn-search-simulator"

const whatsappGMN = getWhatsAppLink("Olá! Quero um diagnóstico do meu Google Meu Negócio.")
---

<section
    class="relative min-h-screen flex items-center pt-32 pb-20 overflow-hidden"
>
    <div
        class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[600px] bg-blue-900/20 blur-[120px] rounded-full pointer-events-none opacity-30"
    >
    </div>

    <div class="container mx-auto px-4 relative z-10">
        <div class="flex flex-col-reverse lg:grid lg:grid-cols-2 gap-12 items-center">
            <div class="space-y-8 text-center lg:text-left">
                <div
                    class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-blue-500/10 border border-blue-500/20 text-xs font-mono text-blue-400"
                >
                    <span class="relative flex h-2 w-2">
                        <span
                            class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-500 opacity-75"
                        ></span>
                        <span
                            class="relative inline-flex rounded-full h-2 w-2 bg-blue-500"
                        ></span>
                    </span>
                    Visibilidade Local
                </div>

                <h1
                    class="text-4xl lg:text-6xl font-display font-bold leading-tight tracking-tight"
                >
                    Apareça melhor no Google e receba mais <span
                        class="bg-blue-500/10 px-2 rounded-lg text-blue-500"
                        >contatos locais</span
                    >
                </h1>

                <p
                    class="text-xl text-gray-400 max-w-2xl mx-auto lg:mx-0 leading-relaxed"
                >
                    Otimização completa do seu perfil no Google, com SEO local e
                    estratégia de avaliações — feito para negócios que dependem de
                    busca local e WhatsApp para vender
                </p>

                <div
                    class="flex flex-col sm:flex-row items-center gap-4 justify-center lg:justify-start"
                >
                    <Button
                        href={whatsappGMN}
                        variant="primary"
                        class="w-full sm:w-auto text-lg px-8 py-4 bg-blue-500! hover:bg-blue-400!"
                    >
                        Quero um diagnóstico rápido
                    </Button>
                    <Button
                        href="#o-que-voce-recebe"
                        variant="secondary"
                        class="w-full sm:w-auto text-lg px-8 py-4"
                    >
                        Ver o que está incluso
                    </Button>
                </div>

                <p
                    class="text-sm text-gray-500 flex items-center justify-center lg:justify-start gap-2"
                >
                    <Icon name="lucide:check" class="w-4 h-4 text-blue-500" />
                    Entrega em 3 a 5 dias úteis. Processo objetivo
                </p>
            </div>

            <div class="hidden lg:block relative">
                <div
                    class="relative z-10 bg-surface border border-white/10 rounded-2xl p-2 shadow-2xl lg:rotate-1 lg:hover:rotate-0 transition-transform duration-700"
                >
                    <div class="aspect-video bg-black/50 rounded-lg relative">
                        <GmnSearchSimulator client:only="react" cycleInterval={5000}>
                            <div slot="fallback" class="w-full h-full bg-white flex flex-col items-center justify-center p-6">
                                <div class="w-32 h-10 mb-8 bg-gray-100 rounded-lg animate-pulse"></div>
                                <div class="w-full max-w-sm h-12 bg-white border border-gray-200 rounded-full mb-6"></div>
                                <div class="flex gap-3">
                                    <div class="w-20 h-8 bg-gray-100 rounded-full animate-pulse"></div>
                                    <div class="w-20 h-8 bg-blue-100 rounded-full animate-pulse"></div>
                                </div>
                            </div>
                        </GmnSearchSimulator>

                        <div
                            class="absolute -top-6 -left-6 bg-slate-900/40 backdrop-blur-xl border border-white/20 p-4 rounded-xl shadow-2xl flex items-center gap-4"
                        >
                            <div
                                class="w-10 h-10 bg-blue-500/20 rounded-full flex items-center justify-center text-blue-500"
                            >
                                <Icon name="lucide:trending-up" class="w-5 h-5" />
                            </div>
                            <div>
                                <div class="text-xs text-gray-400">
                                    Ranking
                                </div>
                                <div class="font-bold text-white">
                                    Top #3 → #1
                                </div>
                            </div>
                        </div>

                        <div
                            class="absolute -bottom-6 -right-6 bg-blue-500 p-3 rounded-full shadow-xl shadow-black/50"
                        >
                            <Icon name="simple-icons:google" class="w-8 h-8 text-white" />
                        </div>
                    </div>
                </div>

                <div
                    class="absolute -inset-4 bg-blue-500/20 blur-xl -z-10 rounded-2xl lg:rotate-3"
                >
                </div>
            </div>
        </div>

        <div
            class="mt-20 pt-10 border-t border-white/5 flex flex-col md:flex-row items-center justify-end gap-6 text-gray-500 text-sm"
        >
            <p>Otimizado para:</p>
            <div
                class="flex flex-wrap justify-center gap-8 opacity-60 grayscale hover:grayscale-0 transition-all duration-500"
            >
                <span class="font-bold flex items-center gap-2">
                    <Icon name="lucide:map-pin" class="w-4 h-4" />
                    Busca Local
                </span>
                <span class="font-bold flex items-center gap-2">
                    <Icon name="lucide:star" class="w-4 h-4" />
                    Avaliações
                </span>
                <span class="font-bold flex items-center gap-2">
                    <Icon name="lucide:phone" class="w-4 h-4" />
                    Ligações Diretas
                </span>
            </div>
        </div>
    </div>
</section>
